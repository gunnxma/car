<div id="content" class="span10">
			<!-- content starts -->
			<div>
				<ul class="breadcrumb">
					<li>
            <%= link_to "添加客户", :new_customer, :class => "btn btn-info" %>
            <% #link_to "导出Excel", customers_path(format: "xls"), :class => "btn btn-info" %>
            <%= link_to "导出Excel", request.url.sub!("customers","customers.xls"), :class => "btn btn-info" %>
					</li>
				</ul>
			</div>
      <%= render partial: "layouts/notice", locals: { model: nil} %>      
			<div class="row-fluid">
				<div class="box span12">
					<div class="box-header well" data-original-title>
						<h2>客户信息</h2>
					</div>
					<div class="box-content">
            <%= search_form_for @q, :url => :customers, :method => "get" do |f| %>
              <%= render partial: "search_form", locals: { f: f } %>
            <% end %>
            <table class="table table-striped table-bordered bootstrap-datatable">
						  <thead>
							  <tr>
								  <th>编号</th>
                  <th>操作</th>
                  <th>状态</th>
                  <th>客户名称</th>
                  <th>需求车辆</th>
                  <th>需求价位</th>
                  <th>商机阶段</th>
                  <th>跟进</th>
                  <th>员工</th>
                  <th>录入时间</th>
							  </tr>
						  </thead>   
						  <tbody>
                <%= render partial: "item", collection: @customers, as: :customer %>
						  </tbody>
					  </table> 
            <%= page_entries_info @customers %>
            <%= will_paginate @customers, renderer: SemanticPagination %>            
					</div>
				</div><!--/span-->			
			</div><!--/row-->    
					<!-- content ends -->
			</div><!--/#content.span10-->
<div id="content" class="span10">
			<!-- content starts -->
			

			<div>
				<ul class="breadcrumb">
					<li>
            <%= link_to "添加客户", :new_customer, :class => "btn btn-info" %>
            <%= link_to "导出Excel", customers_path(format: "xls"), :class => "btn btn-info" %>
					</li>
				</ul>
			</div>

      <% if flash[:notice] %>  
			<div class="alert alert-info">
				<%= flash[:notice] %>
			</div>
      <% end %>
      
			<div class="row-fluid">
				<div class="box span12">
					<div class="box-header well" data-original-title>
						<h2><i class="icon-picture"></i>客户信息</h2>
						<div class="box-icon">
							<a href="#" class="btn btn-setting btn-round"><i class="icon-cog"></i></a>
							<a href="#" class="btn btn-minimize btn-round"><i class="icon-chevron-up"></i></a>
							<a href="#" class="btn btn-close btn-round"><i class="icon-remove"></i></a>
						</div>
					</div>
					<div class="box-content">
            <table class="table table-striped table-bordered bootstrap-datatable datatable">
						  <thead>
							  <tr>
								  <th>编号</th>
                  <th>操作</th>
                  <th>状态</th>
                  <th>客户名称</th>
                  <th>需求车辆</th>
                  <th>需求价位</th>
                  <th>商机阶段</th>
                  <th>员工</th>
                  <th>录入时间</th>
							  </tr>
						  </thead>   
						  <tbody>
              <% @customers.each do |customer| %>
							<tr>
                <td><%= link_to customer.no, customer_path(customer), :target => "_blank" %></td>
								<td class="center">
                  <%= link_to "修改", edit_customer_path(car), :class => "btn btn-info" %>
                  <%= link_to "删除", customer_path(car), :method => :delete, :class => "btn btn-danger", :confirm => "确定要删除吗" %>
                </td>
                <td><%= customer.status_str %></td>
                <td><%= customer.name %></td>
                <td><%= customer.need_car %></td>
                <td><%= customer.need_price %></td>
                <td><%= customer.business_stage %></td>
                <td><%= customer.user.name %></td>
                <td><%= customer.addtime.strftime("%Y-%m-%d") if car.addtime %></td>
							</tr>
              <% end %>
						  </tbody>
					  </table> 
            
            
					</div>
				</div><!--/span-->
			
			</div><!--/row-->

    
					<!-- content ends -->
			</div><!--/#content.span10-->
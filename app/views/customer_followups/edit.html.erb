<div id="content" class="span10">
			<!-- content starts -->
			<div>
				<ul class="breadcrumb">
					<li>
					</li>
				</ul>
			</div>
      
      <% if flash[:notice] %>  
			<div class="alert alert-info">
				<%= flash[:notice] %>
			</div>
      <% end %>
  
      <% if @followup.errors.any? %>
      <div class="alert alert-info">
        <% @followup.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </div>
      <% end %>
  
			<div class="row-fluid sortable">
				<div class="box span12">
					<div class="box-header well" data-original-title>
						<h2>修改跟进提醒</h2>
					</div>
          
					<div class="box-content">
            <%= form_for @followup, :url => customer_followup_path(@customer, @followup), :method => "patch", :html => { :class => "form-horizontal" } do |f| %>
							<fieldset>
							  <div class="control-group">
                  <%= f.label :name, "客户名称", :class => "control-label" %>
                  <div class="controls">
                    <span class="input-xlarge uneditable-input"><%= @customer.name %></span>
                  </div>
							  </div>
                <div class="control-group">
                  <%= f.label :followup_type_id, "联系方式", :class => "control-label" %>
                  <div class="controls">
                    <%= f.select :followup_type_id, FollowupType.all.collect { |p| [ p.name, p.id ] } %>
                  </div>
							  </div>
                <div class="control-group">
                  <%= f.label :content, "联系内容", :class => "control-label" %>
                  <div class="controls">
                    <%= f.text_area :content, :style => "width:480px;height:50px" %>
                  </div>
							  </div>
                <div class="control-group">
                  <%= f.label :has_next, "是否提醒", :class => "control-label" %>
                  <div class="controls">
                    <label class="checkbox inline">
                      <%= f.radio_button :has_next, 1, :onclick => "set_next(this.value);" %>是
                    </label>
                    <label class="checkbox inline">
                      <%= f.radio_button :has_next, 0, :onclick => "set_next(this.value);" %>否
                    </label>
                  </div>
							  </div>
                <div class="control-group" id="div_nexttime">
                  <%= f.label :next_time, "提醒日期", :class => "control-label" %>
                  <div class="controls">
                    <%= f.date_field :next_time %>
                  </div>
							  </div>
                <div class="control-group" id="div_nextcontent">
                  <%= f.label :next_content, "提醒内容", :class => "control-label" %>
                  <div class="controls">
                    <%= f.text_area :next_content, :style => "width:480px;height:50px" %>
                  </div>
							  </div>
                <div class="control-group">
                  <%= f.label :is_finished, "是否处理", :class => "control-label" %>
                  <div class="controls">
                    <label class="checkbox inline">
                      <%= f.radio_button :is_finished, 1 %>是
                    </label>
                    <label class="checkbox inline">
                      <%= f.radio_button :is_finished, 0 %>否
                    </label>
                  </div>
							  </div>
                <div class="control-group">
                  <%= f.label :business_stage_id, "商机阶段", :class => "control-label" %>
                  <div class="controls">
                    <select name="business_stage_id">
                      <%= options_for_select(BusinessStage.all.collect { |p| [p.name, p.id]}, @customer.customer_other.business_stage_id) %>
                    </select>
                  </div>
							  </div>
							  <div class="form-actions">
                  <%= f.submit "保存", :class => "btn btn-primary" %>
							  </div>
							</fieldset>
            <% end %>
					
					</div>
				</div><!--/span-->
			
			</div><!--/row-->
  
  
      <div class="row-fluid sortable">
				<div class="box span12">
					<div class="box-header well" data-original-title>
						<h2>跟进记录</h2>
					</div>
					<div class="box-content">
            <table class="table table-striped table-bordered bootstrap-datatable">
						  <thead>
							  <tr>
								  <th>联系方式</th>
                  <th>联系内容</th>
                  <th>是否提醒</th>
                  <th>提醒日期</th>
                  <th>提醒内容</th>
                  <th>是否处理</th>
							  </tr>
						  </thead>   
						  <tbody>
              <% @followups.each do |followup| %>
							<tr>
                <td><%= followup.followup_type.name %></td>
                <td><%= followup.content %></td>
                <td><%= followup.has_next_str %></td>
                <td><%= followup.next_time %></td>
                <td><%= followup.next_content %></td>
                <td><%= link_to followup.is_finished_str, edit_customer_followup_path(@customer, followup), :class => "btn btn-info"  %></td>
							</tr>
              <% end %>
						  </tbody>
					  </table> 
            
            
					</div>
				</div><!--/span-->
			
			</div><!--/row-->

    
					<!-- content ends -->
			</div><!--/#content.span10-->
<%= content_for :javascript do %>
<script>
function set_next(value) {
  if (value == 1) {
    $("#div_nexttime").css("display","");
    $("#div_nextcontent").css("display","");
  } else {
    $("#div_nexttime").css("display","none");
    $("#div_nextcontent").css("display","none");
  }
}
</script>
<% end %>
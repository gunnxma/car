<div class="ui center aligned grid">
  <div class="six wide column">
    <% if flash[:notice] %>    
    <div class="error ui message"><%= flash[:notice] %></div>
    <% end %>
    <%= form_for @user, url: { :action => "checklogin" } do |f| %>
    <div class="ui form segment">
      <div class="field">
        <label>帐号</label>
        <div class="ui left labeled icon input">
          <%= f.text_field :account, :placeholder => "请输入登录帐号" %>
          <i class="user icon"></i>
          <div class="ui corner label">
            <i class="asterisk icon"></i>
          </div>
        </div>
      </div>
      <div class="field">
        <label>密码</label>
        <div class="ui left labeled icon input">
          <%= f.password_field :pwd %>
          <i class="lock icon"></i>
          <div class="ui corner label">
            <i class="asterisk icon"></i>
          </div>
        </div>
      </div>
      <input type="submit" class="ui blue submit button" value="登录" />
    </div>
    <% end %>
  </div>
</div>
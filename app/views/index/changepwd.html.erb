<div id="content" class="span10">
			<!-- content starts -->
      
      <% if flash[:notice] %>  
			<div class="alert alert-info">
				<%= flash[:notice] %>
			</div>
      <% end %>
  
			<div class="row-fluid sortable">
				<div class="box span12">
					<div class="box-header well" data-original-title>
						<h2>修改密码</h2>
					</div>
          
					<div class="box-content">
            <%= form_tag index_savechangepwd_path, :method => :post, :class => "form-horizontal" do %>
							<fieldset>
							  <div class="control-group">
                  <%= label_tag "old_pwd", "旧密码", :class => "control-label" %>
                  <div class="controls">
                    <%= password_field_tag "old_pwd" %>
                  </div>
							  </div>
							  <div class="control-group">
                  <%= label_tag "new_pwd", "新密码", :class => "control-label" %>
                  <div class="controls">
                    <%= password_field_tag "new_pwd" %>
                  </div>
							  </div>
							  <div class="control-group">
                  <%= label_tag "confirm_pwd", "确认新密码", :class => "control-label" %>
                  <div class="controls">
                    <%= password_field_tag "confirm_pwd" %>
                  </div>
							  </div>
							  <div class="form-actions">
                  <%= submit_tag "保存", :class => "btn btn-primary" %>
							  </div>
							</fieldset>
            <% end %>
					
					</div>
				</div><!--/span-->
			
			</div><!--/row-->

    
					<!-- content ends -->
			</div><!--/#content.span10-->
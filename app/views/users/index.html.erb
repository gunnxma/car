<div id="content" class="span10">
			<!-- content starts -->
			<div>
				<ul class="breadcrumb">
					<li>
            <%= link_to "添加用户", :new_user, :class => "btn btn-info" %>
					</li>
				</ul>
			</div>

      <% if flash[:notice] %>  
			<div class="alert alert-info">
				<%= flash[:notice] %>
			</div>
      <% end %>
      
			<div class="row-fluid sortable">
				<div class="box span12">
					<div class="box-header well" data-original-title>
						<h2>用户管理</h2>
					</div>
					<div class="box-content">
            <table class="table table-striped table-bordered bootstrap-datatable datatable">
						  <thead>
							  <tr>
                  <th>所属部门</th>
								  <th>姓名</th>
                  <th>帐号</th>
                  <th>密码</th>
                  <th>电话</th>
                  <th>操作</th>
							  </tr>
						  </thead>   
						  <tbody>
                <% @users.each do |user| %>
							<tr>
                <td><%= user.department.name %></td>
                <td><%= user.name %></td>
                <td><%= user.account %></td>
                <td><%= user.pwd %></td>
                <td><%= user.phone %></td>
								<td class="center">
                  <%= link_to "修改", edit_user_path(user), :class => "btn btn-info" %>
                  <%= link_to "删除", user_path(user), :method => :delete, :class => "btn btn-danger", :confirm => "确定要删除吗？" %>
                </td>
							</tr>
              <% end %>
						  </tbody>
					  </table> 
            
            
					</div>
				</div><!--/span-->
			
			</div><!--/row-->

    
					<!-- content ends -->
			</div><!--/#content.span10-->
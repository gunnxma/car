<div id="content" class="span10">
			<!-- content starts -->
			<div>
				<ul class="breadcrumb">
					<li>
            <%= link_to "添加", :new_repair, :class => "btn btn-info" %>
            <% #link_to "导出Excel", repairs_path(format: "xls"), :class => "btn btn-info" %>
            <%= link_to "导出Excel", request.url.sub!("repairs","repairs.xls"), :class => "btn btn-info" %>
					</li>
				</ul>
			</div>
      <%= render partial: "layouts/notice", locals: { model: nil} %>      
			<div class="row-fluid">
				<div class="box span12">
					<div class="box-header well" data-original-title>
						<h2>车辆整备</h2>
					</div>
					<div class="box-content">
            <%= search_form_for @q, :url => :repairs, :method => "get" do |f| %>
              <%= render partial: "search_form", locals: {f: f} %>
            <% end %>
            <table class="table table-striped table-bordered bootstrap-datatable">
						  <thead>
							  <tr>
								  <th>车辆编号</th>
                  <th>操作</th>
                  <th>审核状态</th>
                  <th>车辆信息</th>
                  <th>牌照</th>
                  <th>VIN</th>
                  <th>整备项目</th>
                  <th>整备合计</th>
                  <th>整备预警</th>
                  <th>是否完成</th>
                  <th>发布人</th>
                  <th>发布时间</th>
							  </tr>
						  </thead>   
						  <tbody>
                <%= render partial: "item", collection: @repairs, as: :repair %>
						  </tbody>
					  </table> 
            <%= page_entries_info @repairs %>
            <%= will_paginate @repairs, renderer: SemanticPagination %>
					</div>
				</div><!--/span-->			
			</div><!--/row-->
					<!-- content ends -->
			</div><!--/#content.span10-->
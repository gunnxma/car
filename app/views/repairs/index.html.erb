<div id="content" class="span10">
			<!-- content starts -->
			<div>
				<ul class="breadcrumb">
					<li>
            <%= link_to "添加", :new_repair, :class => "btn btn-info" %>
            <% #link_to "导出Excel", repairs_path(format: "xls"), :class => "btn btn-info" %>
            <%= link_to "导出Excel", request.url.sub!("repairs","repairs.xls"), :class => "btn btn-info" %>
					</li>
				</ul>
			</div>

      <% if flash[:notice] %>  
			<div class="alert alert-info">
				<%= flash[:notice] %>
			</div>
      <% end %>
      
			<div class="row-fluid">
				<div class="box span12">
					<div class="box-header well" data-original-title>
						<h2>车辆整备</h2>
					</div>
					<div class="box-content">
            <%= search_form_for @q, :url => :repairs, :method => "get" do |f| %>
            添加时间:<%= f.date_field :addtime_gteq, style: "width:120px" %> ~ <%= f.date_field :addtime_lteq, style: "width:120px" %>
            状态:<%= f.select :status_eq, [{id: 0, name: '待整备'}, {id: 1, name: '整备中'}, {id: 2, name: '已完成'}].collect { |p| [ p[:name], p[:id] ] }, { include_blank: true }, { :style => "width:100px" } %>
              <%= f.submit "查询" %>
            <% end %>
            <table class="table table-striped table-bordered bootstrap-datatable">
						  <thead>
							  <tr>
								  <th>车辆编号</th>
                  <th>操作</th>
                  <th>审核状态</th>
                  <th>车辆信息</th>
                  <th>牌照</th>
                  <th>VIN</th>
                  <th>整备项目</th>
                  <th>整备合计</th>
                  <th>整备预警</th>
                  <th>是否完成</th>
                  <th>发布人</th>
                  <th>发布时间</th>
							  </tr>
						  </thead>   
						  <tbody>
                <% @repairs.each do |repair| %>
							<tr>
                <td><%= repair.car_info.car_no %></td>
								<td class="center">
                  <%= link_to "审核", check_repair_path(repair), :method => :post %>
                  <%= link_to "修改", edit_repair_path(repair) %>
                  <%= link_to "删除", repair_path(repair), :method => :delete, data: { confirm: "确定要删除吗" } %>
                </td>
                <td><%= repair.check_str %></td>
                <td><%= repair.car_info.info %></td>
                <td><%= repair.car_info.platenumber %></td>
                <td><%= repair.car_info.vin %></td>
                <td>
                  共有<%= repair.repair_details.count %>个项目<br>
                  <% repair.repair_details.each_with_index do |item, i| %>
                  <%= "(#{i+1})、#{item.item}" %><%= "  外协单位：#{item.cooperation.name}" if item.is_cooperation == 1 %><br>
                  <% end %>
                </td>
                <td><%= repair.cost %>元</td>
                <td>剩余<%= repair.remain_hour %>小时</td>
                <td><%= repair.status_str %></td>
                <td><%= repair.user.name if repair.user %></td>
                <td><%= repair.addtime.strftime("%Y-%m-%d") %></td>
							</tr>
              <% end %>
						  </tbody>
					  </table> 
            <%= page_entries_info @repairs %>
            <%= will_paginate @repairs, renderer: SemanticPagination %>                
            
					</div>
				</div><!--/span-->
			
			</div><!--/row-->

    
					<!-- content ends -->
			</div><!--/#content.span10-->
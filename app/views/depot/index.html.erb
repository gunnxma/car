<div id="content" class="span10">
			<!-- content starts -->
			<div>
				<ul class="breadcrumb">
					<li>
            <%= link_to "添加", new_assessment_path(from: "depot"), :class => "btn btn-info" %>
            <% #link_to "导出Excel", depot_index_path(format: "xls"), :class => "btn btn-info" %>
            <%= link_to "导出Excel", request.url.sub!("index","index.xls"), :class => "btn btn-info" %>
					</li>
				</ul>
			</div>
      <%= render partial: "layouts/notice", locals: { model: nil} %>      
			<div class="row-fluid">
				<div class="box span12">
					<div class="box-header well" data-original-title>
						<h2>车辆库存</h2>
					</div>
					<div class="box-content">
            <%= search_form_for @q, :url => depot_index_path, :method => "get" do |f| %>
              <%= render partial: "search_form", locals: { f: f } %>
            <% end %>
            <table class="table table-striped table-bordered bootstrap-datatable">
						  <thead>
							  <tr>
								  <th>车辆编号</th>
								  <th>店面</th>
                  <th>操作</th>
                  <th>收购日期</th>
                  <th>状态</th>
                  <th>类型</th>
                  <th>评估照片</th>
                  <th>车辆品牌型号</th>
                  <th>车牌号</th>
                  <th>排量</th>
                  <th>表显里程</th>
                  <th>跟进</th>
                  <th>库存报警</th>
                  <th>评估价</th>
                  <th>评估师</th>
							  </tr>
						  </thead>   
						  <tbody>
                <%= render partial: "item", collection: @cars, as: :car %>
						  </tbody>
					  </table> 
            <%= page_entries_info @cars %>
            <%= will_paginate @cars, renderer: SemanticPagination %>            
					</div>
				</div><!--/span-->			
			</div><!--/row-->    
					<!-- content ends -->
			</div><!--/#content.span10-->
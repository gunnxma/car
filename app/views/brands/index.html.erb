<div class="ui blue inverted center aligned top attached segment">
  <p>车辆品牌</p>
</div>
<div class="ui attached segment">
  <%= link_to "添加", :new_brand, :class => "ui mini blue button" %>
</div>
<div class="ui attached segment">
  <%= search_form_for @q, :method => "get" do |f| %>
    <%= f.label :name_cont %>
    <%= f.search_field :name_cont %>
    <%= f.label :initial_cont %>
    <%= f.search_field :initial_cont %>
    <%= f.submit %>
  <% end %>
</div>
<div class="ui bottom attached segment">
  <table class="ui table segment">
    <thead>
      <tr><th>品牌名称</th>
      <th>品牌系列</th>
      <th>操作</th>
    </tr></thead>
    <tbody>
      <% @brands.each do |brand| %>
      <tr>
        <td><%= brand.name %></td>
        <td>Approved</td>
        <td>None</td>
      </tr>
      <% end %>
    </tbody>
    <tfoot>
      <tr><th colspan="3">

      </th>
    </tr></tfoot>
  </table>
</div>
<%= will_paginate @brands %>
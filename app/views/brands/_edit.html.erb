<div class="ui blue inverted center aligned top attached segment">
  <p>修改车辆品牌</p>
</div>
<div class="ui attached segment">
  <%= link_to "返回列表", :brands, :class => "ui mini blue button" %>
</div>
<div class="ui attached segment">
  <div class="ui error form segment">
    <% if flash[:notice] %>
    <div class="ui error message">
      <%= flash[:notice] %>
    </div>
    <% end %>
    <% if @brand.errors.any? %>
    <div class="ui error message">
      <% @brand.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </div>
    <% end %>

    <%= form_for @brand do |f| %>
    <div class="field">
      <label>品牌名称</label>
      <div class="ui left input">
        <%= f.text_field :name, :placeholder => "请输入品牌名称" %>
        <div class="ui corner label">
          <i class="asterisk icon"></i>
        </div>
      </div>
    </div>
    <%= f.submit "修改", :class => "ui blue submit button" %>
    <% end %>
  </div>
</div>
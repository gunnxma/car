<div id="content" class="span10">
			<!-- content starts -->
			<div>
				<ul class="breadcrumb">
					<li>
            <%= link_to "添加", :new_payment, :class => "btn btn-info" %>
            <% #link_to "导出Excel", payments_path(format: "xls"), :class => "btn btn-info" %>
            <%= link_to "导出Excel", request.url.sub!("payments","payments.xls"), :class => "btn btn-info" %>
					</li>
				</ul>
			</div>

      <% if flash[:notice] %>  
			<div class="alert alert-info">
				<%= flash[:notice] %>
			</div>
      <% end %>
      
			<div class="row-fluid">
				<div class="box span12">
					<div class="box-header well" data-original-title>
						<h2>付款管理</h2>
					</div>
					<div class="box-content">
            <%= search_form_for @q, :url => :payments, :method => "get" do |f| %>
            付款时间:<%= f.date_field :addtime_gteq, style: "width:120px" %> ~ <%= f.date_field :addtime_lteq, style: "width:120px" %>
            车辆VIN码:<%= f.search_field :car_info_vin_cont, :style => "width:100px" %>
              <%= f.submit "查询" %>
            <% end %>
            <table class="table table-striped table-bordered bootstrap-datatable">
						  <thead>
							  <tr>
								  <th>车辆编号</th>
                  <th>操作</th>
                  <th>车辆信息</th>
                  <th>VIN</th>
                  <th>收购价</th>
                  <th>销售成交价</th>
                  <th>付款明细</th>
                  <th>金额合计</th>
                  <th>付款人</th>
                  <th>付款时间</th>
							  </tr>
						  </thead>   
						  <tbody>
                <% @payments.each do |payment| %>
							<tr>
                <td><%= payment.car_info.car_no %></td>
								<td class="center">
                  <%= link_to "修改", edit_payment_path(payment) %>
                  <%= link_to "删除", payment_path(payment), :method => :delete, data: { confirm: "确定要删除吗" } %>
                </td>
                <td><%= payment.car_info.info %></td>
                <td><%= payment.car_info.vin %></td>
                <td><%= payment.car_info.procurement_price %>万</td>
                <td><%= payment.car_info.deal_price %>万</td>
                <td>
                  共有<%= payment.payment_details.count %>个项目<br>
                  <% payment.payment_details.each do |item| %>
                  <%= "#{item.pay_reason.name} 金额: ￥#{item.cost} 付款方式: #{item.payments_way.name} 说明: #{item.remark}" %><br>
                  <% end %>
                </td>
                <td><%= payment.cost %>元</td>
                <td><%= payment.user.name if payment.user %></td>
                <td><%= payment.addtime.strftime("%Y-%m-%d") %></td>
							</tr>
              <% end %>
						  </tbody>
					  </table> 
            <%= page_entries_info @payments %>
            <%= will_paginate @payments, renderer: SemanticPagination %>   
            
            
					</div>
				</div><!--/span-->
			
			</div><!--/row-->

    
					<!-- content ends -->
			</div><!--/#content.span10-->
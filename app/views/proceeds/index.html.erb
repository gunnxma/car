<div id="content" class="span10">
			<!-- content starts -->
			<div>
				<ul class="breadcrumb">
					<li>
            <%= link_to "添加", :new_proceed, :class => "btn btn-info" %>
            <% #link_to "导出Excel", proceeds_path(format: "xls"), :class => "btn btn-info" %>
            <%= link_to "导出Excel", request.url.sub!("proceeds","proceeds.xls"), :class => "btn btn-info" %>
					</li>
				</ul>
			</div>

      <% if flash[:notice] %>  
			<div class="alert alert-info">
				<%= flash[:notice] %>
			</div>
      <% end %>
      
			<div class="row-fluid">
				<div class="box span12">
					<div class="box-header well" data-original-title>
						<h2>收款管理</h2>
					</div>
					<div class="box-content">
            <%= search_form_for @q, :url => :proceeds, :method => "get" do |f| %>
            收款时间:<%= f.date_field :addtime_gteq, style: "width:120px" %> ~ <%= f.date_field :addtime_lteq, style: "width:120px" %>
            车辆VIN码:<%= f.search_field :car_info_vin_cont, :style => "width:100px" %>
              <%= f.submit "查询" %>
            <% end %>
            <table class="table table-striped table-bordered bootstrap-datatable datatable">
						  <thead>
							  <tr>
								  <th>车辆编号</th>
                  <th>操作</th>
                  <th>车辆信息</th>
                  <th>VIN</th>
                  <th>收购价</th>
                  <th>销售成交价</th>
                  <th>收款明细</th>
                  <th>金额合计</th>
                  <th>收款人</th>
                  <th>收款时间</th>
							  </tr>
						  </thead>   
						  <tbody>
                <% @proceeds.each do |proceed| %>
							<tr>
                <td><%= proceed.car_info.car_no %></td>
								<td class="center">
                  <%= link_to "修改", edit_proceed_path(proceed) %>
                  <%= link_to "删除", proceed_path(proceed), :method => :delete, data: { confirm: "确定要删除吗" } %>
                </td>
                <td><%= proceed.car_info.info %></td>
                <td><%= proceed.car_info.vin %></td>
                <td><%= proceed.car_info.procurement_price %>万</td>
                <td><%= proceed.car_info.deal_price %>万</td>
                <td>
                  共有<%= proceed.proceeds_details.count %>个项目<br>
                  <% proceed.proceeds_details.each do |item| %>
                  <%= "#{item.proceeds_reason.name} 金额: ￥#{item.cost} 付款方式: #{item.payments_way.name} 说明: #{item.remark}" %><br>
                  <% end %>
                </td>
                <td><%= proceed.cost %>元</td>
                <td><%= proceed.user.name if proceed.user %></td>
                <td><%= proceed.addtime.strftime("%Y-%m-%d") %></td>
							</tr>
              <% end %>
						  </tbody>
					  </table> 
            <%= page_entries_info @proceeds %>
            <%= will_paginate @proceeds, renderer: SemanticPagination %> 
            
            
					</div>
				</div><!--/span-->
			
			</div><!--/row-->

    
					<!-- content ends -->
			</div><!--/#content.span10-->
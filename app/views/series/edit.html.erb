<div id="content" class="span10">
			<!-- content starts -->
			

			<div>
				<ul class="breadcrumb">
					<li>
						<a href="/">Home</a> <span class="divider">/</span>
					</li>
					<li>
						<a>信息设置</a>
					</li>
				</ul>
			</div>
      
      <% if flash[:notice] %>  
			<div class="alert alert-info">
				<%= flash[:notice] %>
			</div>
      <% end %>
  
      <% if @brand.errors.any? %>
      <div class="alert alert-info">
        <% @brand.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </div>
      <% end %>
  
      <%= link_to "返回车系列表", brand_series_index_path(@brand), :class => "btn btn-info" %>
			<div class="row-fluid sortable">
				<div class="box span12">
					<div class="box-header well" data-original-title>
						<h2><i class="icon-edit"></i>修改<%= @brand.name %>车系</h2>
						<div class="box-icon">
							<a href="#" class="btn btn-setting btn-round"><i class="icon-cog"></i></a>
							<a href="#" class="btn btn-minimize btn-round"><i class="icon-chevron-up"></i></a>
							<a href="#" class="btn btn-close btn-round"><i class="icon-remove"></i></a>
						</div>
					</div>
          
					<div class="box-content">
            <%= form_for @series, :url => brand_series_path(@brand, @series), :html => { :method => :put, :class => "form-horizontal"} do |f| %>
							<fieldset>
							  <div class="control-group">
                  <%= f.label :name, "车系名称", :class => "control-label" %>
                  <div class="controls">
                    <%= f.text_field :name, :class => "input-xlarge focused", :placeholder => "请输入车系名称" %>
                  </div>
							  </div>
							  <div class="form-actions">
                  <%= f.submit "修改", :class => "btn btn-primary" %>
							  </div>
							</fieldset>
            <% end %>
					
					</div>
				</div><!--/span-->
			
			</div><!--/row-->

    
					<!-- content ends -->
			</div><!--/#content.span10-->
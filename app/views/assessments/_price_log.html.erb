<table class="table table-striped table-bordered bootstrap-datatable">
						  <thead>
							  <tr>
								  <th>价格变动记录</th>
								  <th>变动原因</th>
								  <th>时间</th>
								  <th>操作人</th>
							  </tr>
						  </thead>   
						  <tbody>
                <% list.each do |item| %>
							<tr>
                <td>
                  <% item.describe.split(',').each do |str| %>
                  <%= str %><br>
                  <% end %>
                </td>
                <td><%= item.reason %></td>
                <td><%= item.addtime %></td>
                <td><%= item.user.name %></td>
							</tr>
                <% end %>
  </tbody>
</table>
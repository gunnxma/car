<div class="ui blue inverted center aligned top attached segment">
  <p>车辆品牌</p>
</div>
<div class="ui attached segment">
  <%= link_to "添加", :new_assessment, :class => "ui mini blue button" %>
</div>
<div class="ui attached segment">
  <%= search_form_for @q, :url => :assessments, :method => "get" do |f| %>
    <%= f.label "车辆编号" %>
    <%= f.search_field :car_no_cont %>
    <%= f.submit "筛选", :class => "ui mini blue submit button" %>
  <% end %>
</div>
<div class="ui bottom attached segment">
  <table class="ui table segment">
    <thead>
      <tr>
        <tr>
        <th>车辆编号</th>
        <th>修改</th>
        <th>上架操作</th>
        <th>评估日期</th>
        <th>状态</th>
        <th>类型</th>
        <th>评估照片</th>
        <th>车辆品牌型号</th>
        <th>车牌号</th>
        <th>排量</th>
        <th>表显里程</th>
        <th>VIN码</th>
        <th>跟进</th>
        <th>评估价</th>
        <th>评估师</th>
        <th>其他操作</th>
      </tr>
    </thead>
    <tbody>
      <% @cars.each do |car| %>
      <tr>
        <td><%= car.car_no %></td>
        <td></td>
        <td>
          <%= link_to "直接入库", edit_brand_path(brand), :class => "ui mini blue button" %>
          <%= link_to "上架销售", brand_path(brand), :method => :delete, :class => "ui mini blue button", :confirm => "确定要删除吗？" %>
        </td>
        <td><%= car.addtime %></td>
        <td><%= car.status_str %></td>
        <td><%= car.saletype %></td>
        <td><i class="photo icon"></i></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
      </tr>
      <% end %>
    </tbody>
    <tfoot>
      <tr><th colspan="3">
        <%= page_entries_info @cars %>
      </th>
    </tr></tfoot>
  </table>
  <%= will_paginate @cars, renderer: SemanticPagination %>
</div>

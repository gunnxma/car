<div id="content" class="span10">
			<!-- content starts -->
			<div>
				<ul class="breadcrumb">
					<li>
            <%= link_to "返回列表", :departments, :class => "btn btn-info" %>
					</li>
				</ul>
			</div>
      
      <% if flash[:notice] %>  
			<div class="alert alert-info">
				<%= flash[:notice] %>
			</div>
      <% end %>
  
      <% if @department.errors.any? %>
      <div class="alert alert-info">
        <% @department.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </div>
      <% end %>
  
			<div class="row-fluid sortable">
				<div class="box span12">
					<div class="box-header well" data-original-title>
						<h2>修改部门</h2>
					</div>
          
					<div class="box-content">
            <%= form_for @department, :html => { :class => "form-horizontal" } do |f| %>
							<fieldset>
							  <div class="control-group">
                  <%= f.label :name, "名称", :class => "control-label" %>
                  <div class="controls">
                    <%= f.text_field :name, :class => "input-xlarge focused", :placeholder => "请输入部门名称" %>
                  </div>
							  </div>
							  <div class="form-actions">
                  <%= f.submit "保存", :class => "btn btn-primary" %>
							  </div>
							</fieldset>
            <% end %>
					
					</div>
				</div><!--/span-->
			
			</div><!--/row-->

    
					<!-- content ends -->
			</div><!--/#content.span10-->
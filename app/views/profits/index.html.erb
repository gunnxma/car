<div id="content" class="span10">
			<!-- content starts -->
			<div>
				<ul class="breadcrumb">
					<li>
            <% #link_to "导出Excel", profits_path(format: "xls"), :class => "btn btn-info" %>
            <%= link_to "导出Excel", request.url.sub!("profits","profits.xls"), :class => "btn btn-info" %>
					</li>
				</ul>
			</div>

      <% if flash[:notice] %>  
			<div class="alert alert-info">
				<%= flash[:notice] %>
			</div>
      <% end %>
      
			<div class="row-fluid">
				<div class="box span12">
					<div class="box-header well" data-original-title>
						<h2>利润分析</h2>
					</div>
					<div class="box-content">
            <%= search_form_for @q, :url => :proceeds, :method => "get" do |f| %>
            售出时间:<%= f.date_field :selloff_time_gteq, style: "width:120px" %> ~ <%= f.date_field :selloff_time_lteq, style: "width:120px" %>
            车辆VIN码:<%= f.search_field :vin_cont, :style => "width:100px" %>
              <%= f.submit "查询" %>
            <% end %>
            <table class="table table-striped table-bordered bootstrap-datatable datatable">
						  <thead>
							  <tr>
								  <th>车辆编号</th>
                  <th>车辆信息</th>
                  <th>VIN</th>
                  <th>成交人员</th>
                  <th>整备费用</th>
                  <th>付款合计</th>
                  <th>收款合计</th>
                  <th>利润</th>
							  </tr>
						  </thead>   
						  <tbody>
                <% @cars.each do |car| %>
							<tr>
                <td><%= car.car_no %></td>
                <td><%= car.info %></td>
                <td><%= car.vin %></td>
                <td>
                  录入人：<%= car.user.name %><br>
                  评估人：<%= car.car_assess.user.name if car.car_assess.user %><br>
                  成交人：<%= car.sell_user.name %>
                </td>
                <td><%= car.repair_costs %>万</td>
                <td><%= car.payment_costs %>万</td>
                <td><%= car.proceeds_costs %>万</td>
                <td><%= car.profit_costs %>万</td>
							</tr>
              <% end %>
						  </tbody>
					  </table> 
            <%= page_entries_info @cars %>
            <%= will_paginate @cars, renderer: SemanticPagination %>             
            
					</div>
				</div><!--/span-->
			
			</div><!--/row-->

    
					<!-- content ends -->
			</div><!--/#content.span10-->